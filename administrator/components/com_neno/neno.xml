<?xml version="1.0" encoding="utf-8"?>
<extension type="component"
           version="3.0"
           method="upgrade">
    <name>com_neno</name>
    <creationDate>2014-10-02</creationDate>
    <copyright>Copyright (C) 2014. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>Soren Beck Jensen</author>
    <authorEmail>soren@notwebdesign.com</authorEmail>
    <authorUrl>http://www.notwebdesign.com</authorUrl>
    <version>1.0.0</version>
    <description>The complete translation solution for Joomla</description>

    <scriptfile>script.php</scriptfile>

    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql"
                  charset="utf8">sql/install.mysql.utf8.sql
            </file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql"
                  charset="utf8">sql/uninstall.mysql.utf8.sql
            </file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>neno.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>assets</folder>
    </files>
    <languages folder="site">

        <language tag="en-GB">language/en-GB/en-GB.com_neno.ini</language>
    </languages>
    <administration>
        <menu img="components/com_neno/assets/images/s_com_neno.png">COM_NENO</menu>
        <submenu>

            <menu link="option=com_neno&amp;view=groupselements"
                  view="translations"
                  alt="neno/groupselements">
                COM_NENO_TITLE_GROUPSELEMENTS
            </menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>neno.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <folder>language</folder>
        </files>
        <languages folder="administrator">

            <language tag="en-GB">language/en-GB/en-GB.com_neno.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.com_neno.sys.ini</language>
        </languages>
    </administration>
    <plugins>
        <plugin group="search"
                plugin="neno"/>
    </plugins>

</extension>
